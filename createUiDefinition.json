{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "isWizard": false,
            "basics": {
                "description": "",
                "location": {
                    "label": "Location",
                    "toolTip": "Location for all resources"
                }
            }
        },
        "basics": [
            {
                "name": "rgName",
                "type": "Microsoft.Common.TextBox",
                "label": "Resource Group name",
                "placeholder": "",
                "defaultValue": "",
                "toolTip": "Enter a resource group name",
                "constraints": {
                    "required": true,
                    "regex": "^[A-Za-z0-9][A-Za-z0-9-]{1,28}[A-Za-z0-9]$",
                    "validationMessage": "Resource group name must be 1-30 alphanumeric characters with no trailing hyphen."
                },
                "visible": true
            },
            {
                "name": "country",
                "type": "Microsoft.Common.DropDown",
                "label": "Country",
                "defaultValue": "USA",
                "toolTip": "Select the country your team is based out of",
                "constraints": {
                    "allowedValues": [
                        { "label": "USA", "value": "USA" },
                        { "label": "Canada", "value": "Canada" },
                        { "label": "Spain", "value": "Spain" },
                        { "label": "Philippines", "value": "Philippines" },
                        { "label": "United Kingdom", "value": "United Kingdom" },
                        { "label": "Hungary", "value": "Hungary" },
                        { "label": "Belgium", "value": "Belgium" },
                        { "label": "Netherlands", "value": "Netherlands" },
                        { "label": "Germany", "value": "Germany" },
                        { "label": "Switzerland", "value": "Switzerland" },
                        { "label": "France", "value": "France" },
                        { "label": "Singapore", "value": "Singapore" },
                        { "label": "Denmark", "value": "Denmark" },
                        { "label": "Australia", "value": "Australia" },
                        { "label": "LATAM", "value": "LATAM" }
                    ],
                    "required": true
                },
                "visible": true
            }
        ],
        "outputs": {
            "location": "[location()]",
            "rgName": "[basics('rgName')]",
            "countryId": "[basics('country')]"
        }
    }
}
